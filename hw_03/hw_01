// Проверка возраста. Не придумала, как сделать без циклов, используя только то, что прошли на первом занятии, поэтому так.
var userAge = 15;
var requiredAge = 18;
if (userAge >= requiredAge) {
  console.log("Добро пожаловать!");
} else {
  console.log("Ой-ой, этот раздел закрыт!");
}

